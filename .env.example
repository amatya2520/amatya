# ========================================
# SHOPIFY STOREFRONT CONFIGURATION
# ========================================
# Copy this file to .env and fill in your values
# 
# IMPORTANT: Never commit .env to version control!
# Only .env.example should be in the repository.

# Required: Your Shopify store permanent domain
# Example: my-store.myshopify.com
VITE_SHOPIFY_STORE_DOMAIN=

# Required: Storefront API access token
# Get this from Shopify Admin > Settings > Apps and sales channels > Develop apps
# Create a new app, configure Storefront API scopes, and generate a token
VITE_SHOPIFY_STOREFRONT_TOKEN=

# Optional: Shopify API version (default: 2025-07)
# Only change if you need a specific API version
VITE_SHOPIFY_API_VERSION=2025-07

# ========================================
# STORE CUSTOMIZATION
# ========================================

# Store display name (used in UI, SEO titles, etc.)
VITE_STORE_NAME=AMATYA

# Currency settings
# Currency code (ISO 4217) - e.g., INR, USD, EUR, GBP
VITE_STORE_CURRENCY_CODE=INR

# Currency symbol for display
VITE_STORE_CURRENCY_SYMBOL=â‚¹

# Free delivery threshold (set to 0 to disable free delivery messaging)
VITE_STORE_FREE_DELIVERY_THRESHOLD=2500

# Canonical URL for SEO (your custom domain)
# Example: https://yourstore.com
VITE_STORE_CANONICAL_URL=https://example.com

# ========================================
# ADVANCED CONFIGURATION
# ========================================

# Local storage key for cart persistence
# Change this if you need to reset all customer carts
VITE_CART_STORAGE_KEY=shop-cart
